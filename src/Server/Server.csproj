<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <NoWarn>IDE0058;CA1062</NoWarn>
    <RootNamespace>Brighid.Identity</RootNamespace>
    <LangVersion>9.0</LangVersion>
    <Configuration Condition="$(Configuration) == ''">Debug</Configuration>
    <NuGetLockFilePath Condition="$(Configuration) == 'Debug'">packages-debug.lock.json</NuGetLockFilePath>
    <NuGetLockFilePath Condition="$(Configuration) == 'Release'">packages-release.lock.json</NuGetLockFilePath>
  </PropertyGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="**/Views/*.css" CopyToOutputDirectory="true" TargetPath="wwwroot" />
  </ItemGroup>

  <Target Name="Test" AfterTargets="Restore">
    <Message Importance="High" Text="@(ContentWithTargetPath, '\n')" />
  </Target>

  <ItemGroup>
    <PackageReference Include="AspNetCore.ServiceRegistration.Dynamic" Version="1.2.0" />
    <PackageReference Include="AWSSDK.KeyManagementService" Version="3.5.0.41" />
    <PackageReference Include="Flurl" Version="3.0.0" />
    <PackageReference Include="Flurl.Http" Version="3.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="5.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="5.0.0" />
    <PackageReference Include="Microsoft.IdentityModel.Tokens" Version="6.7.1" />
    <PackageReference Include="OpenIddict" Version="2.0.1" />
    <PackageReference Include="OpenIddict.EntityFrameworkCore" Version="2.0.1" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.7.1" />
    <PackageReference Include="System.Linq.Async" Version="5.0.0" />
    <PackageReference Include="System.Security.Cryptography.Algorithms" Version="4.3.1" />
    <PackageReference Include="System.Security.Cryptography.OpenSsl" Version="5.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="5.0.0" />
    <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" Version="5.0.0-alpha.2" />
    <PackageReference Include="Morcatko.AspNetCore.JsonMergePatch.SystemText" Version="3.0.6" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 'Debug'">
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="IdentityTests" />
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
  </ItemGroup>

</Project> 
