@namespace Brighid.Identity.Auth
@model Brighid.Identity.Auth.SignupRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

@{
    var redirectUri = Uri.EscapeDataString(Model.RedirectUri.ToString());
}

<form method="post">
    <input type="hidden" asp-for="RedirectUri" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-field">
        <input placeholder="Username" asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-field w-100 my-2">
        <input placeholder="Password" type="password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-field w-100 my-2">
        <input placeholder="Confirm Password" type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-actions">
        <input value="Signup" type="submit" class="w-25" />
        <div>or <a href="/login?redirect_uri=@redirectUri">Login</a></div>
    </div>
</form>